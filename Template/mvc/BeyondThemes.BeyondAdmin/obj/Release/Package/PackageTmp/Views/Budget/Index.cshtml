    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PhaseType.PhaseTypeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ForecastCapital)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ForecastExpense)
