            @Html.DisplayFor(modelItem => item.ForecastCapital)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ForecastExpense)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ActualCapital)
        </td>
        <td>
